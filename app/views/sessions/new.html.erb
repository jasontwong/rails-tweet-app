<h1>Login</h1>

<p class="alert"><%= flash[:alert] %></p>

<%= form_tag login_path do %>
  <div class="field"><%= label_tag :email %> <%= text_field_tag :email, params[:email] %></div>
  <div class="field"><%= label_tag :password %> <%= password_field_tag :password %></div>
  <div class="field"><%= submit_tag 'Log in' %></div>
<% end %>
